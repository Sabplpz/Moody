<div class="container">
    <h2>Edit Journal Entry</h2>
</div>

<h1 class="journal-id" style="display: none">{{id}}</h1>

<div class="row mobile">
    <div class="col s12 m8 19">
        <div class="row">
        <form class="col s12" id="journal-form">
            <div class="row">
                <div class="col s12 gratitude">
                    <label for="textarea1">I am grateful for...</label>
                    <textarea id="textarea1" class="materialize-textarea gratitude-user-entry">{{gratitude}}</textarea>
                </div>
                <div class="col s12 great_day">
                    <label for="textarea1">What would make today great?</label>
                    <textarea id="textarea1 great-day-user-entry"
                        class="materialize-textarea great-day-user-entry">{{great_day}}</textarea>
                </div>
                <div class="col s12 affirmation">
                    <label for="textarea1">Daily affirmation</label>
                    <textarea id="textarea1 affirmation-user-entry"
                        class="materialize-textarea affirmation-user-entry">{{affirmation}}</textarea>
                </div>
                <div class="col s12 highlights">
                    <label for="textarea1">Highlights of the day</label>
                    <textarea id="textarea1 highlights-user-entry"
                        class="materialize-textarea highlights-user-entry">{{highlights}}</textarea>
                </div>
                <div class="col s12 lesson">
                    <label for="textarea1">What did I learn today?</label>
                    <textarea id="textarea1 lessons-today-user-entry"
                        class="materialize-textarea lessons-today-user-entry">{{lesson}}</textarea>
                </div>
            </div>
        </div>
        </div>
            <div class="col s12 m4 13">
                <h3 class="text"></h3>
                <input type="radio" value="happy" name="happy-mood" class="mood" id="happy-mood" alt="happy-mood">
                <label class="moodBtn" for="happy-mood"></label>
                <input type="radio" value="neutral" name="neutral-mood" class="mood" id="neutral-mood"
                    alt="neutral-mood">
                <label class="moodBtn" for="neutral-mood"></label>
                <input type="radio" value="indecisive" name="indecisive-mood" class="mood" id="indecisive-mood"
                    alt="indecisive-mood">
                <label class="moodBtn" for="indecisive-mood"></label>
                <input type="radio" value="anxious" name="anxious-mood" class="mood" id="anxious-mood"
                    alt="anxious-mood">
                <label class="moodBtn" for="anxious-mood"></label>
                <input type="radio" value="sad" name="sad-mood" class="mood" id="sad-mood" alt="sad-mood">
                <label class="moodBtn" for="sad-mood"></label>
                <input type="radio" value="emotional" name="emotional-mood" class="mood" id="emotional-mood"
                    alt="emotional-mood">
                <label class="moodBtn" for="emotional-mood"></label>
                <input type="radio" value="angry" name="angry-mood" class="mood" id="angry-mood" alt="angry-mood">
                <label class="moodBtn" for="angry-mood"></label>
                <input type="radio" value="annoyed" name="annoyed-mood" class="mood" id="annoyed-mood"
                    alt="annoyed-mood">
                <label class="moodBtn" for="annoyed-mood"></label>
                <input type="radio" value="sick" name="sick-mood" class="mood" id="sick-mood" alt="sick-mood">
                <label class="moodBtn" for="sick-mood"></label>
                <input type="radio" value="tired" name="tired-mood" class="mood" id="tired-mood" alt="tired-mood">
                <label class="moodBtn" for="tired-mood"></label>
                <br /><br />
                <br /><br />
                <button class="btn" href="/" type="submit">Update</button>
            </div>
        </form>
    </div>

    <script src="/js/editPrev.js"></script>
    <script src="/js/prevDate.js"></script>